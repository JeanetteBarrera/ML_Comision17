<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('../partials/head', {title: 'Creá tu cuenta'}) %>
<body>
	<!-- Header -->
	<%- include('../partials/headerNavbar') %>
	<!-- /Header -->
	<main>
	<!-- product detail -->
	<div class="container register-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Inicia Sesión</h2>
			</div>
		</div>
		<div class="col-12 col-sm-8">
			<form action="/users/login" method="post">
				<div class="row product-detail">
					<div class="col-12">
						<label for="email" class="form-label">Email:</label>
						<input type="email" id="email" name="email" placeholder="Ej: javier@gmail.com" class="form-input" >
						<% if (locals.errors && errors.email) { %>
							<small class="error-msg"><%= errors.email.msg %></small>
						<% } %>
					</div>
					<div class="col-12">
						<label for="password" class="form-label">Contraseña:</label>
						<input type="password" id="password" name="password" class="form-input">
						<% if (locals.errors && errors.password) { %>
							<small class="error-msg"><%= errors.password.msg %></small>
						<% } %>
					</div>
                    <div class="col-12">
                        <input type="checkbox" id="remember" name="remember" class="">
						<label for="remember" class="form-label">Recordarme</label>
					</div>
					<div class="col-12">
						<button type="submit" class="buy-now-button">Guardar</button>
					</div>
				</div>
			</form>
		</div>
		</div>
	</div>
</main>
	<!-- /product detail -->

	<!-- footer -->
	<%- include('../partials/footer') %>
	<!-- /footer -->

</body>	
</html>