<!DOCTYPE html>
<html lang="es">

<!-- Include Head -->
<%- include('../partials/head', {title: 'Cre치 tu cuenta'}) %>
<body>
	<!-- Header -->
	<%- include('../partials/headerNavbar') %>
	<!-- /Header -->

    <!-- header section ends -->

    <!-- home section stars -->
    <main class="profile" id="userForms">
        <form class="form_container" action="/users/profile/<%= user.id %>?_method=PUT" method="POST"
            enctype="multipart/form-data">
            <h3>
                Bienvenid@
            </h3>
            <div class="container_img">

                <img src="/images/avatars/" alt="">

                <div class="avatar_edit">
                    <input name="avatar" type='file' id="imageUpload" />
                    <label for="imageUpload" class="fas fa-pencil-alt"></label>
                </div>
            </div>
            <div class="box_1">
                <div>
                    <label for="name">nombre:</label>
                    <input type="text" name="name" placeholder="name" id="name" value="<%= user.name %>">
                    <span class="text-danger"></span>
                </div>
                <div>
                    <label for="lastname">apellido:</label>
                    <input type="text" name="last_name" placeholder="lastname" id="lastname" value="<%= user.last_name %>">
                    <span class="text-danger"></span>
                </div>
                <div class="extra_info">
                    <a href="/users/favorites">mis favoritos</a>
                    <a href="/users/check">mis compras</a>
                </div>

            </div>
            <div>
                <label>email:</label>
                <h2 class="email"><%= user.email %></h2>
            </div>
            <div>
                <a href="/">Cambiar contrase침a</a>
            </div>
            <div>
                <label for="birthday_date">Cumplea침os:</label>
                <input type="date" name="birthday_date" id="birthday_date" value="2017-01-01">
                <span class="text-danger"></span>
            </div>
            <div>
                <label for="phone">Telefono:</label>
                <input type="text" name="phone" id="phone" value="<%= user.phone %>">
                <span class="text-danger"></span>
            </div>
            <div>
                <label for="city">Ciudad</label>
                <input type="text" name="city" placeholder="Ej: Ciuda Autonoma de Buenos Aires" id="city" value="<%= user.city %>">
                <span class="text-danger"></span>
            </div>
            <div>
                <label for="province">provincia:</label>
                <input type="text" name="province" placeholder="province" id="province" value="<%= user.province %>">
                <span class="text-danger"></span>
            </div>
            <div>
                <label for="cod_postal">codigo postal:</label>
                <input type="text" name="cod_postal" placeholder="zipCode" id="cod_postal">
                <span class="text-danger"></span>
            </div>

            <div>
                <label for="street">Direcci칩n:</label>
                <input type="text" name="street" id="street">
                <span class="text-danger"></span>
            </div>
            <div>
                <label for="number">nro:</label>
                <input type="number" name="number" id="number">
                <span class="text-danger"></span>
            </div>
            <button type="submit">Guardar</button>
        </form>

    </main>

</body>

</html>