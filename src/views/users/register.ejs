<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('../partials/head', {title: 'Cre치 tu cuenta'}) %>
<body>
	<!-- Header -->
	<%- include('../partials/headerNavbar') %>
	<!-- /Header -->
	<main>
	<!-- product detail -->
	<div class="container register-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Cre치 tu cuenta</h2>
			</div>
		</div>
		<div class="col-12 col-sm-8">
			<form action="/users/register" method="post" enctype="multipart/form-data">
				<div class="row product-detail">
					<div class="col-12">
						<label for="name" class="form-label">Nombre :</label>
						<input type="text" id="name" name="name" placeholder="Ej: Ursula" class="form-input" value="<%= locals.old && old.name ? old.name : null%>">
						<% if (locals.errors && errors.name) { %>
							<small class="error-msg"><%= errors.name.msg %></small>
						<% } %>
					</div>
                    <div class="col-12">
						<label for="last_name" class="form-label">Apellido :</label>
						<input type="text" id="last_name" name="last_name" placeholder="Ej: Velasquez" class="form-input" value="<%= locals.old && old.last_name ? old.last_name : null%>">
						<% if (locals.errors && errors.last_name) { %>
							<small class="error-msg"><%= errors.last_name.msg %></small>
						<% } %>
					</div>
					<div class="col-12">
						<label for="email" class="form-label">Email:</label>
						<input type="email" id="email" name="email" placeholder="Ej: javier@gmail.com" class="form-input" value="<%= locals.old && old.email ? old.email : null%>">
						<% if (locals.errors && errors.email) { %>
							<small class="error-msg"><%= errors.email.msg %></small>
						<% } %>
					</div>
					<div class="col-12">
						<label for="password" class="form-label">Contrase침a:</label>
						<input type="password" id="password" name="password1" class="form-input">
						<% if (locals.errors && errors.password1) { %>
							<small class="error-msg"><%= errors.password1.msg %></small>
						<% } %>
					</div>
                    <div class="col-12">
						<label for="password2" class="form-label">Confirmar contrase침a:</label>
						<input type="password" id="password2" name="password2" class="form-input">
						<% if (locals.errors && errors.password2) { %>
							<small class="error-msg"><%= errors.password2.msg %></small>
						<% } %>
					</div>
					<div class="col-12">
						<label for="image" class="form-label">Image:</label>
						<input class="col-12" type="file" name="image" id="image">
						<% if (locals.errors && errors.image) { %>
							<small class="error-msg"><%= errors.image.msg %></small>
						<% } %>
					</div>
					<div class="col-12">
						<button type="submit" class="buy-now-button">Guardar</button>
					</div>
				</div>
			</form>
		</div>
		</div>
	</div>
</main>
	<!-- /product detail -->

	<!-- footer -->
	<%- include('../partials/footer') %>
	<!-- /footer -->

</body>	
</html>